console.log('You are in charge of the cake for a childs birthday. It will have one candle for each year of their total age. They will only be able to blow out the tallest of the candles. Your task is to count how many candles are the tallest.')

let c = [ 3, 2, 1, 3 ];

console.log(c.sort(function(a, b){return b - a}));

let maxCount = 0;

c.sort(function(a, b){
    return b - a
    }
  )
let tmp = c[0];
for(let x in c){
  //console.log(c[x])
  //console.log(tmp);
  if(tmp === c[x]){
    maxCount += 1
  }
}
console.log(maxCount);
